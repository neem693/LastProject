<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="normal">

	<!-- 전체목록 조회 -->
	<select id="normal_list" resultType="vo.NormalVo">
		select * from normal
	</select>
	
	<!-- 전체레코드수 구하기 -->
	<select id="normal_total_count" parameterType="Map" resultType="int">
		select nvl(count(*),0) from normal
		<trim prefix="where" prefixOverrides="or">
			<if test="m_name!=null">
				m_name like concat('%' ,#{m_name}, '%')
			</if>
			<if test="nc_title!=null">
				or nc_title like concat('%' ,#{nc_title}, '%')
			</if>
			<if test="nc_content!=null">
				or nc_contents like concat('%' ,#{nc_contents}, '%')
			</if>

		</trim>
	</select>
	
